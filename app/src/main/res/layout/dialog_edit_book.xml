<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/liner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x381"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/img_edit_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


         <LinearLayout
             android:background="@drawable/shape_background_hui"
             android:layout_marginRight="@dimen/x40"
             android:layout_marginLeft="@dimen/x40"
              android:layout_marginTop="@dimen/y208"
             android:layout_width="match_parent"
             android:layout_height="@dimen/y110">
             <EditText
                 android:id="@+id/edit_count"
                 android:padding="@dimen/x10"
                 android:gravity="top"
                 android:layout_gravity="top"
                 android:textSize="@dimen/x20"
                 android:hint="此次主要编辑内容"
                 android:background="@null"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />
         </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/y36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:textSize="@dimen/x30"
            android:textColor="@color/white"
            android:text="@string/string_sure"
            android:id="@+id/btn_sure"
            android:layout_centerInParent="true"
            android:background="@drawable/img_update_btton"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y60" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
      android:id="@+id/img_pause"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/liner"
        android:background="@drawable/img_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
