<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_login_back" />

    <com.meetsl.scardview.SCardView
        app:cardShadowEndColor="@color/gray"
        android:layout_width="@dimen/x680"
        android:layout_height="@dimen/y620"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y417"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/x5"
        app:cardLightDirection="top">

        <RelativeLayout
            android:layout_width="@dimen/x465"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/x106"
            android:layout_marginTop="@dimen/y208"
            android:background="@drawable/shape_bottom_line">

            <ImageView
                android:id="@+id/img_nuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/img_login_number" />

            <EditText
                android:id="@+id/edte_number"
                android:layout_width="@dimen/x365"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/img_nuber"
                android:background="@null"
                android:hint="账号/手机号/邮箱"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x20" />

            <ImageView
                android:id="@+id/img_number_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_login_normal_delete" />
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="@dimen/x465"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/x106"
            android:layout_marginTop="@dimen/y288"
            android:background="@drawable/shape_bottom_line">

            <ImageView
                android:id="@+id/img_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/img_login_pwd" />

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="@dimen/x365"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/img_pwd"
                android:background="@null"
                android:hint="请输入密码"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x20" />

            <ImageView

                android:id="@+id/img_delete_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_login_normal_delete" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:text="@string/string_login"
            android:textSize="@dimen/x30"
            android:textColor="@color/white"
            android:background="@drawable/img_btn_login"
            android:layout_marginTop="@dimen/x421"
            android:layout_marginLeft="@dimen/x107"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.meetsl.scardview.SCardView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_tou"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x180"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y308"
        />
</RelativeLayout>