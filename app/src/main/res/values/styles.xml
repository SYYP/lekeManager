<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="maintextTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="main_view">
        <item name="android:layout_marginTop">@dimen/x5</item>
        <item name="android:layout_height">@dimen/x5</item>
        <item name="android:layout_width">@dimen/x50</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>
     <style name="book_title_color">
         <item name="android:textColor">@color/book_title_color</item>
         <item name="android:textSize">@dimen/x24</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>

     </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- //设置背景 -->
        <item name="android:windowFrame">@null</item>
        <!-- //去掉边框 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- //设置半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- //设置无标题 -->
        <item name="android:windowFullscreen">false</item>
        <!-- //设置全屏 -->
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
